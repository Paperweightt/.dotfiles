{
  // my config
  "multiCommand.commands": [
    {
      "command": "multiCommand.openFileOrToggleFolder",
      "sequence": [
        "list.select",
        {
          "command": "workbench.action.closeSidebar",
          "when": "editorTextFocus" // This runs only if the selection opened an editor
        }
      ]
    }
  ],
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 1,
  "editor.formatOnSave": true,
  "editor.cursorSmoothCaretAnimation": "on", // gliding movement
  "editor.cursorSurroundingLines": 12, // acts like 'scrolloff=5'
  "editor.cursorSurroundingLinesStyle": "all",
  "editor.smoothScrolling": true,
  // end
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.editorAssociations": {
    "*.exe": "default",
    "*.png": "imagePreview.previewEditor"
  },
  "workbench.startupEditor": "none",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "[python]": {
    "editor.formatOnType": true
  },
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "liveshare.anonymousGuestApproval": "accept",
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",
  "githubPullRequests.createOnPublishBranch": "never",
  "output.smartScroll.enabled": false,
  "workbench.iconTheme": "vscode-icons",
  "glassit.alpha": 240,
  "vsicons.dontShowNewVersionMessage": true,
  "C_Cpp.default.compilerPath": "C:\\msys64\\mingw64\\bin\\g++.exe",
  "editor.unicodeHighlight.allowedCharacters": {
    "ยง": true
  },
  "animations.Install-Method": "Apc Customize UI++",
  "update.mode": "manual",
  "workbench.colorTheme": "Vim Dark Hard",
  "html.autoClosingTags": false,
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": "none",
  "zenMode.fullScreen": false,
  "workbench.statusBar.visible": false,
  "security.promptForLocalFileProtocolHandling": false,
  "powershell.promptToUpdatePowerShell": false,
  "vim.easymotion": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<space>"
      ],
      "commands": [
        "vspacecode.space"
      ]
    },
    {
      "before": [
        ","
      ],
      "commands": [
        "vspacecode.space",
        {
          "command": "whichkey.triggerKey",
          "args": "m"
        }
      ]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<space>"
      ],
      "commands": [
        "vspacecode.space"
      ]
    },
    {
      "before": [
        ","
      ],
      "commands": [
        "vspacecode.space",
        {
          "command": "whichkey.triggerKey",
          "args": "m"
        }
      ]
    },
    {
      "before": [
        ">"
      ],
      "commands": [
        "editor.action.indentLines"
      ]
    },
    {
      "before": [
        "<"
      ],
      "commands": [
        "editor.action.outdentLines"
      ]
    }
  ],
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "editor.renderWhitespace": "none",
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": false,
  "breadcrumbs.enabled": false,
  "workbench.activityBar.location": "top"
}
