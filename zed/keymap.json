// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-t": "workspace::OpenInTerminal"
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "space space": "file_finder::Toggle", // Open file finder
      "space f p": "projects::OpenRecent" //  Open recent project
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "space r n": "editor::Rename"
    }
  },
  {
    // filetree netrw ish oil
    "context": "vim_mode == normal",
    "bindings": {
      "-": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      // edit
      "o": "project_panel::NewFile",
      "O": "project_panel::NewDirectory",
      "i": "project_panel::Rename",
      "a": "project_panel::Rename",
      "d d": "project_panel::Cut",
      "p": "project_panel::Paste",
      // close
      "ctrl-w q": "workspace::ToggleLeftDock",
      // Navigate between panel
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "DebugPanel",
    "bindings": {
      "ctrl-w q": "workspace::ToggleBottomDock",
      // dont seem to work
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  }
]
